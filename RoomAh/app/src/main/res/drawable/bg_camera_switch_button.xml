<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- Focused -->
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="50dp" />
                    <solid android:color="@color/white_transparent" />
                </shape>
            </item>
            <item
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp"
                android:left="8dp"
                android:drawable="@drawable/img_switch">
            </item>
        </layer-list>
    </item>
    <!-- Pressed -->
    <item android:state_pressed="true">
        <layer-list>
            <item
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"
                android:left="5dp" >
                <shape>
                    <corners android:radius="50dp" />
                    <solid android:color="@color/white_transparent" />
                </shape>
            </item>
            <item
                android:top="12dp"
                android:right="12dp"
                android:bottom="12dp"
                android:left="12dp"
                android:drawable="@drawable/img_switch">
            </item>
        </layer-list>
    </item>
    <!-- Unpressed -->
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="50dp" />
                    <solid android:color="@color/white_transparent" />
                </shape>
            </item>
            <item
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp"
                android:left="8dp"
                android:drawable="@drawable/img_switch">
            </item>
        </layer-list>
    </item>
</selector>