<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed -->
    <item android:state_checked="false" android:state_pressed="true">
        <shape>
            <corners android:radius="50dp" />
            <stroke android:width="1dp" android:color="@color/blue_900_transparent" />
            <solid android:color="@color/blue_900_transparent" />
        </shape>
    </item>
    <item android:state_checked="true" android:state_pressed="true">
        <shape>
            <corners android:radius="50dp" />
            <stroke android:width="1dp" android:color="@color/orange_transparent" />
            <solid android:color="@color/orange_transparent" />
        </shape>
    </item>

    <!-- Unpressed -->
    <item android:state_checked="false">
        <shape>
            <corners android:radius="50dp" />
            <stroke android:width="1dp" android:color="@color/blue_300" />
            <solid android:color="@color/blue_300" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape>
            <corners android:radius="50dp" />
            <stroke android:width="1dp" android:color="@color/red" />
            <solid android:color="@color/red"/>
        </shape>
    </item>
</selector>